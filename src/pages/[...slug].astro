---
import EntityRenderer from "../components/EntityRenderer.astro"
import ViewRenderer from "../components/ViewRenderer.astro"
import { getDeploymentMode, getDrupalBaseUrl, loadDrupalRoute } from "../lib/drupal"

const slug = Astro.params.slug
const path = slug ? `/${slug}` : "/"

const deploymentMode = getDeploymentMode()
const drupalBaseUrl = getDrupalBaseUrl()
const proxySecret = import.meta.env.DRUPAL_PROXY_SECRET

const result = await loadDrupalRoute(path)

if (result.resolved.resolved && !result.resolved.headless) {
	// Split routing: send the user back to Drupal on the same public domain.
	if (deploymentMode === "split_routing") {
		return Astro.redirect(result.resolved.drupal_url ?? `${drupalBaseUrl}${path}`, 302)
	}

	// Frontend-first: the middleware should proxy non-headless requests.
	// If origin protection is disabled, fall back to a direct redirect.
	if (!proxySecret) {
		return Astro.redirect(`${drupalBaseUrl}${path}`, 302)
	}

	Astro.response.status = 404
}

if (!result.resolved.resolved) {
	Astro.response.status = 404
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{result.title ?? "Drupal"}</title>
	</head>
	<body>
		{result.kind === "entity" && result.doc ? (
			<EntityRenderer entity={result.doc.data} included={result.doc.included} />
		) : result.kind === "view" && result.doc ? (
			<ViewRenderer doc={result.doc} />
		) : (
			<main style="max-width: 60rem; margin: 2rem auto; padding: 0 1rem;">
				<h1>Not Found</h1>
				<p>No Drupal content matched this path.</p>
			</main>
		)}
	</body>
</html>
