---
import EntityRenderer from "../components/EntityRenderer.astro"
import ViewRenderer from "../components/ViewRenderer.astro"
import { getDeploymentMode, loadDrupalRoute } from "../lib/drupal"

const slug = Astro.params.slug
const path = slug ? `/${slug}` : "/"

const deploymentMode = getDeploymentMode()
const proxySecret = import.meta.env.DRUPAL_PROXY_SECRET

const result = await loadDrupalRoute(path)

function getSafeDrupalRedirectUrl(input: string | null): string | null {
	if (!input) return null

	let allowedOrigin: string
	try {
		allowedOrigin = new URL(import.meta.env.DRUPAL_BASE_URL).origin
	} catch {
		return null
	}

	try {
		const target = new URL(input, allowedOrigin)
		return target.origin === allowedOrigin ? target.toString() : null
	} catch {
		return null
	}
}

if (result.resolved.redirect) {
	return Astro.redirect(result.resolved.redirect.to, result.resolved.redirect.status ?? 302)
}

if (result.resolved.resolved && !result.resolved.headless) {
	// Split routing: send the user back to Drupal on the same public domain.
	if (deploymentMode === "split_routing") {
		const safe = getSafeDrupalRedirectUrl(result.resolved.drupal_url)
		if (safe) {
			return Astro.redirect(safe, 302)
		}
		Astro.response.status = 404
	}

	// Frontend-first: the middleware should proxy non-headless requests.
	// If origin protection is disabled, fall back to a direct redirect.
	if (!proxySecret) {
		const safe = getSafeDrupalRedirectUrl(result.resolved.drupal_url)
		if (safe) {
			return Astro.redirect(safe, 302)
		}
		Astro.response.status = 404
	}

	Astro.response.status = 404
}

if (!result.resolved.resolved) {
	Astro.response.status = 404
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{result.title ?? "Drupal"}</title>
	</head>
	<body>
		{result.kind === "entity" && result.doc && !Array.isArray(result.doc.data) ? (
			<EntityRenderer entity={result.doc.data} included={result.doc.included} />
		) : result.kind === "view" && result.doc ? (
			<ViewRenderer doc={result.doc} />
		) : (
			<main style="max-width: 60rem; margin: 2rem auto; padding: 0 1rem;">
				<h1>Not Found</h1>
				<p>No Drupal content matched this path.</p>
			</main>
		)}
	</body>
</html>
